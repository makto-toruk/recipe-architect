  "instructions": [
    {
      "step": 1,
      "text": "In a large bowl, whisk the eggs together."
    },
    {
      "step": 2,
      "text": "Add maple syrup, salt, brown sugar, and vanilla extract. Mix thoroughly."
    },
    {
      "step": 3,
      "text": "Melt the butter completely and allow it to cool slightly."
    },
    {
      "step": 4,
      "text": "Stream the melted butter into the mixture while whisking.",
      "note": "Stream gradually to ensure thorough incorporation and avoid solid bits."
    },
    {
      "step": 5,
      "text": "Place chopped pecans in the prepared pie crust and pour the filling over them."
    },
    {
      "step": 6,
      "text": "Bake at 400 Â°F for 50 to 60 minutes, until the filling is set but still slightly jiggly."
    },
    {
      "step": 7,
      "text": "Let cool, then invert and cut into squares."
    }
  ],
  "source": {
