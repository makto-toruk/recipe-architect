{
  "id": "shawarma_chicken",
  "title": "Oven-roasted Shawarma Chicken",
  "subtitle": "A quick weeknight dinner.",
  "tags": ["chicken", "quick", "shawarma"],
  "image": "shawarma-chicken.jpg",
  "first_made": "2024-03-03",
  "ingredients": [
    {
      "ref": "chicken",
      "qty": { "num": 5, "den": 2 },
      "unit": "lbs",
      "note": "Boneless, skinless chicken thighs"
    },
    {
      "ref": "avocado_oil",
      "qty": { "num": 2, "den": 1 },
      "unit": "tbsp"
    },
    {
      "ref": "salt",
      "qty": { "num": 2, "den": 1 },
      "unit": "tsp"
    },
    {
      "ref": "pepper",
      "qty": { "num": 1, "den": 1 },
      "unit": "tsp"
    },
    {
      "ref": "yogurt",
      "qty": { "num": 1, "den": 2 },
      "unit": "cup"
    },
    {
      "ref": "lemon_juice",
      "qty": { "num": 1, "den": 2 },
      "unit": "each",
      "note": "Juice of half a lemon"
    },
    {
      "ref": "garlic_powder",
      "qty": { "num": 3, "den": 2 },
      "unit": "tbsp"
    },
    {
      "ref": "paprika",
      "qty": { "num": 1, "den": 1 },
      "unit": "tbsp"
    },
    {
      "ref": "cayenne",
      "qty": { "num": 1, "den": 2 },
      "unit": "tsp"
    },
    {
      "ref": "turmeric",
      "qty": { "num": 1, "den": 2 },
      "unit": "tsp"
    },
    {
      "ref": "cumin_powder",
      "qty": { "num": 1, "den": 2 },
      "unit": "tsp"
    },
    {
      "ref": "garam_masala",
      "qty": { "num": 1, "den": 2 },
      "unit": "tsp"
    },
    {
      "ref": "onion",
      "qty": { "num": 1, "den": 2 },
      "unit": "each",
      "note": "Thinly sliced red-onion"
    }
  ],
  "instructions": [
    {
      "step": 1,
      "text": "Clean the chicken thighs and place in a large bowl."
    },
    {
      "step": 2,
      "text": "Add oil, salt, pepper, yogurt, and lemon juice. Stir to combine."
    },
    {
      "step": 3,
      "text": "Add all the spices and mix well to coat the chicken evenly."
    },
    {
      "step": 4,
      "text": "Add the sliced onion and mix again. Cover and marinate in the fridge for at least 2 hours, ideally overnight."
    },
    {
      "step": 5,
      "text": "Preheat oven to 425°F (220°C). Pack chicken and onions tightly into a loaf pan."
    },
    {
      "step": 6,
      "text": "Bake uncovered for 45 minutes until fully cooked and slightly crisp on top.",
      "note": "Internal temperature (165°F)."
    },
    {
      "step": 7,
      "text": "Flip the loaf onto a cutting board and slice the chicken thinly, shawarma-style. Enjoy!"
    }
  ],
  "source": {
