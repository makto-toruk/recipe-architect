{
  "$id": "units.schema.json",
  "type": "object",
  "patternProperties": {
    "^[a-z_]+$": {
      "type": "object",
      "required": ["name", "aliases"],
      "properties": {
        "name": { "type": "string" },
        "aliases": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
